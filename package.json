{
    "name": "revmonitor",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "frontend",
        "backend"
    ],
    "scripts": {
        "prepare": "husky install",
        "build:frontend": "yarn workspace frontend build",
        "build:backend": "yarn workspace backend build",
        "build": "yarn build:frontend && yarn build:backend",
        "dev:frontend": "yarn workspace frontend dev",
        "dev:backend": "yarn workspace backend dev",
        "dev": "concurrently -k -n BACKEND,FRONTEND -c yellow,cyan \"yarn dev:backend\" \"wait-on http://localhost:3000 && yarn dev:frontend\"",
        "postinstall": "yarn build"
    },
    "packageManager": "yarn@4.9.1",
    "dependencies": {
        "backend": "workspace:*",
        "cors": "^2.8.5",
        "frontend": "workspace:*",
        "typescript": "5.4.5",
        "vite": "^6.2.2"
    },
    "devDependencies": {
        "@types/node": "^22.15.3",
        "@types/react": "^19.1.2",
        "@types/react-dom": "^19.1.3",
        "concurrently": "^9.1.2",
        "husky": "^9.1.7",
        "lint-staged": "^15.0.0",
        "wait-on": "^8.0.3"
    },
    "lint-staged": {
        "frontend/**/*.{js,jsx,ts,tsx}": [
            "cd frontend && eslint --fix",
            "cd frontend && prettier --write"
        ],
        "backend/**/*.{js,ts}": [
            "cd backend && eslint --fix",
            "cd backend && prettier --write"
        ]
    },
    "resolutions": {
        "@types/express": "^4.17.21",
        "@types/multer/@types/express": "^4.17.21"
    }
}
