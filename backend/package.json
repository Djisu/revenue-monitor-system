{
  "name": "revenue-monitoring-system",
  "version": "1.0.0",
  "type": "module",
  "description": "A revenue monitoring system built with Node.js and MongoDB",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "concurrently --kill-others-on-fail --quiet \"npm run build\" \"node -r dotenv/config dist/server.js\" \"wait-on http://localhost:3000 && npm run frontend\"",
    "frontend": "cd ../frontendNew/frontend && npm run dev -- --debug",
    "test-concurrently": "concurrently \"echo Backend running\" \"echo Frontend running\"",
    "docs": "typedoc",
    "test": "npx vitest run --watch"
  },
  "workspaces": [
    "backend",
    "frontend"
  ],
  "dependencies": {
    "@types/morgan": "^1.9.9",
    "@types/winston": "^2.4.4",
    "axios": "^1.7.2",
    "bcrypt": "^5.1.1",
    "chalk": "^5.3.0",
    "colors": "^1.4.0",
    "concurrently": "^8.2.2",
    "config": "^3.3.12",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "express-validator": "^7.2.1",
    "fs": "^0.0.1-security",
    "handlebars": "^4.7.8",
    "jsonwebtoken": "^9.0.0",
    "jsreport": "^4.7.0",
    "jsreport-client": "^1.2.1",
    "md5": "^2.3.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^2.3.3",
    "node-fetch": "^3.3.2",
    "node-printer": "^1.0.4",
    "nodemailer": "^6.9.15",
    "pdf-to-printer": "^5.6.0",
    "pdfkit": "^0.16.0",
    "pdfmake": "^0.2.18",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@edge-runtime/vm": "^4.0.4",
    "@types/bcrypt": "^5.0.2",
    "@types/config": "^3.3.4",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-serve-static-core": "^4.19.6",
    "@types/handlebars": "^4.0.40",
    "@types/jsonwebtoken": "^9.0.7",
