
{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,
    "outDir": "./dist", // Output directory for emitted files
    "rootDir": "./src", // Root directory for input files
  
    /* Bundler mode */
    "moduleResolution": "bundler",
    "isolatedModules": true,


    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true, // Required for compatibility with ES modules
  },
  "include": ["src/**/*.ts", "src/vite.config.ts", "src", "src/vite.config.d.ts"]
}

