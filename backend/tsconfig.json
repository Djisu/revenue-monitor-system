{
  "compilerOptions": {
      "module": "ESNext", // Use ESNext module system
      "target": "ESNext", // Target ESNext,
      "outDir": "./dist", // Outputs compiled files to the dist folder
      "rootDir": "./src",
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "Node",
      "sourceMap": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "types": ["node", "express", "multer", "vitest"],
      "typeRoots": ["node_modules/@types", "src/@types"]
  },
  "include": ["src/**/*.ts", "src/types.d.ts", "tests/**/*.ts", "*.spec.ts", "dist/**/*.js", "dist/**/*.d.ts", "src/seedDatabase.ts"],
  "exclude": [
      "node_modules"
  ]
}