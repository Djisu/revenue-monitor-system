    "@types/pdfkit": "^0.13.8",
    "@types/pdfmake": "^0.2.11",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.7",
    "@vitest/browser": "^2.1.6",
    "@vitest/expect": "^2.1.6",
    "@vitest/spy": "^2.1.6",
    "@vitest/ui": "^2.1.6",
    "happy-dom": "^15.11.6",
    "jsdom": "^25.0.1",
    "supertest": "^6.3.4",
    "ts-jest": "^29.2.5",
